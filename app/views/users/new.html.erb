

<div id='new_user' class='sign-up-container'>


  <%= form_for(@user, html: { class: 'form-horizontal col-sm-offset-2 col-sm-8 new-form' }) do |form| %>
    <div class='sign-up-form col-sm-offset-2 col-sm-8'>

      <%= render partial: '/users/form', object: form %>

      <div class="password-field form-group">
        <%= form.label :password %>
        <%= form.password_field :password, class: 'form-control', :required => true, placeholder: 'Must be at least 4 characters.' %>
      </div>

      <div class="submit-field">
        <%= form.submit 'Sign Up', class: 'btn btn-default' %>
        <%= link_to 'Back', sign_in_path, class: 'btn btn-default' %>
      </div>

    </div>
  <% end %>

</div>
