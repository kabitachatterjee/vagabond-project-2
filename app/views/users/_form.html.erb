
<div class="text-field form-group">
  <%= form.label :name %>
  <%= form.text_field :name, type: 'name', class: 'form-control', :required => true, placeholder: 'Full Name' %>
</div>

<div class="text-field form-group">
  <%= form.label :location %>
  <%= form.text_field :location, type: 'location', class: 'form-control', :required => true, placeholder: 'Which city do you live in?' %>
</div>

<div class="text-field form-group">
  <%= form.label :image %>
  <%= form.text_field :image, class: 'form-control', placeholder: 'Please provide a link to url image.' %>
</div>

<div class="text-field form-group">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email', class: 'form-control', :required => true, placeholder: 'example@example.com' %>
</div>
